@model BO.Samourai

<h4>Samourai</h4>
<hr />
<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Nom)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Nom)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Force)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Force)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Arme)
    </dt>
    <dd class = "col-sm-10">
        @if(Model.Arme != null) {
            @Model.Arme.Nom
        } else {
            <i>[aucune arme]</i>
        }
    </dd>
</dl>
