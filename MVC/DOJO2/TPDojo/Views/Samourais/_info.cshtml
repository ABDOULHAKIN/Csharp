@model BO.Samourai

<h4>Samourai</h4>
<hr />
<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Nom)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Nom)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Force)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Force)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Arme)
    </dt>
    <dd class = "col-sm-10">
        @if(Model.Arme == null) {
            <i>aucune arme</i>
        } else {
            <span>@Model.Arme.Nom</span>
        }
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ArtsMartiaux)
    </dt>
    <dd class = "col-sm-10">
        @if(!Model.ArtsMartiaux.Any()) {
            <i>aucun art martial pratiqué</i>
        } else {
            <ul>
                @foreach(var a in Model.ArtsMartiaux) {
                    <li>@a.Nom</li>
                }
            </ul>
        }
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Potentiel)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Potentiel)
    </dd>
</dl>
