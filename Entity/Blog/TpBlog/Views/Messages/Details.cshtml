@using TpBlog.Models.BO
@model TpBlog.Models.BO.Message

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Message</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            Owner
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OwnerId)
        </dd>
    </dl>
</div>
@if (User.IsInRole("moderator")) {
    <form asp-action="ApproveOrReject" style="display:inline;" method="post">
        <input type="hidden" name="id" value="@Model.MessageId" />
        <input type="hidden" name="status" value="@MessageStatus.Approved" />
        <button type="submit" class="btn btn-xs btn-success">Approve</button>
    </form>
    <form asp-action="ApproveOrReject" style="display:inline;" method="post">
        <input type="hidden" name="id" value="@Model.MessageId" />
        <input type="hidden" name="status" value="@MessageStatus.Rejected" />
        <button type="submit" class="btn btn-xs btn-danger">Reject</button>
    </form>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MessageId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
